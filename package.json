{
    "name": "apophis-orbital-simulator",
    "version": "1.0.0",
    "description": "Interactive 3D orbital mechanics simulator for asteroid 99942 Apophis",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "deploy": "npm run build && gh-pages -d dist",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,html}\" \"*.{ts,js,json,html}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,html}\" \"*.{ts,js,json,html}\""
    },
    "keywords": [
        "apophis",
        "asteroid",
        "orbital-mechanics",
        "three.js",
        "n-body",
        "simulation"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/three": "^0.169.0",
        "gh-pages": "^6.1.1",
        "prettier": "^3.8.1",
        "typescript": "^5.7.2",
        "vite": "^6.0.5"
    },
    "dependencies": {
        "three": "^0.169.0"
    }
}
